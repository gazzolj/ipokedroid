<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/trainer_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/trainer_1" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trainer_picture"
        android:layout_toEndOf="@+id/trainer_picture"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/trainer_picture"
        android:layout_alignBottom="@+id/trainer_picture"
        android:layout_below="@+id/team_name"
        android:orientation="horizontal"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pokemon_1"
            android:id="@+id/team_pokemon1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pokemon_1"
            android:id="@+id/team_pokemon2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pokemon_1"
            android:id="@+id/team_pokemon3"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pokemon_1"
            android:id="@+id/team_pokemon4"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pokemon_1"
            android:id="@+id/team_pokemon5"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pokemon_1"
            android:id="@+id/team_pokemon6"/>

    </LinearLayout>

</RelativeLayout>